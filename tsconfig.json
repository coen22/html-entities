{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "resolveJsonModule": true,
    "plugins": [{ "transform": "typescript-transform-macros" }]
  },
  "include": ["src"],
  "exclude": ["node_modules", "test"]
}
